    {
      "id": "bank_info",
      "title_ar": "البيانات البنكية",
      "title_en": "Bank Information",
      "collapsible": false,
      "fields": [
        {
          "id": "bank_id",
          "widget_type": "combo_box",
          "label_ar": "البنك",
          "label_en": "Bank",
          "layout": {"row": 0, "col": 0, "colspan": 1, "rowspan": 1},
          "properties": {"readonly": true, "enabled": false, "visible": true},
          "combo_source": {
            "type": "query",
            "query": "SELECT id, name_en FROM banks ORDER BY name_en",
            "value_column": "id",
            "display_column": "name_en",
            "default_text_ar": "-- البنك --"
          },
          "validation": [],
          "data_binding": {"column": "bank_id", "type": "integer"}
        },
        {
          "id": "iban",
          "widget_type": "text_input",
          "label_ar": "IBAN",
          "label_en": "IBAN",
