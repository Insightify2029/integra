            "display_column": "name_en",
            "default_text_ar": "-- القسم --"
          },
          "validation": [],
          "data_binding": {"column": "department_id", "type": "integer"}
        },
        {
          "id": "job_title_id",
          "widget_type": "combo_box",
          "label_ar": "الوظيفة",
          "label_en": "Job Title",
          "layout": {"row": 1, "col": 0, "colspan": 1, "rowspan": 1},
          "properties": {"readonly": true, "enabled": false, "visible": true},
          "combo_source": {
            "type": "query",
            "query": "SELECT id, name_ar FROM job_titles ORDER BY name_ar",
            "value_column": "id",
            "display_column": "name_ar",
            "default_text_ar": "-- الوظيفة --"
          },
          "validation": [],
          "data_binding": {"column": "job_title_id", "type": "integer"}
        }
      ]
